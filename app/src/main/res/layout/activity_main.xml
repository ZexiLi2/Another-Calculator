<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultat"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:backgroundTint="#E0E0E0"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="55dp" />

    <EditText
        android:id="@+id/text_num1"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#000"
        android:hint="Escriu un número..."
        />
    <EditText
        android:id="@+id/text_num2"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#000"
        android:hint="Escriu un número..."
        />

    <Button
        android:id="@+id/btn_suma"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#62C6CC"
        android:text="+"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_resta"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#55D58C"
        android:text="-"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_multiplicar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E4A956"
        android:text="*"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_dividir"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D05454"
        android:text="/"
        android:textSize="20dp" />



</LinearLayout>